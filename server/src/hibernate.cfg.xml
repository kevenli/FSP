<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

 <hibernate-configuration>
     
     <session-factory>
         
         <property name="show_sql">false</property>
         <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
         <property name="connection.url">jdbc:mysql://localhost/scheduler?characterEncoding=utf8</property>
         <property name="connection.username">scheduler</property>
         <property name="connection.password">scheduler</property>
         <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
         <property name="hibernate.connection.autocommit">true</property>
        
         
         <mapping class="flowy.scheduler.entities.Application" />
         <mapping class="flowy.scheduler.entities.Worker"/>
         <mapping class="flowy.scheduler.entities.Task"/>
         <mapping class="flowy.scheduler.entities.TaskInstance"/>
         <mapping class="flowy.scheduler.entities.SessionVO"/>
     </session-factory>
     
 </hibernate-configuration>